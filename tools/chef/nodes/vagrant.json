{
    "environment": "development",
    "apache": {
        "version": "2.4"
    },
    "apt": {
        "keyserver_port": 80
    },
    "mysql": {
        "role":                   "master",
        "server_id":               1,
        "bind_address":           "0.0.0.0",
        "server_root_password":   "root",
        "server_repl_password":   "repl",
        "server_debian_password": ""
    },
    "jenkins": {
        "executor": {
            "timeout": 240
        }
    },
    "boilerplate": {
        "country": "jp",
        "git": {
            "use_git_protocol": false
        },
        "app": {
            "repo": {
                "type": "git",
                "uri": "https://github.com/NetCommons3/NetCommons3.git"
            }
        },
        "docs": {
            "repo": {
                "type": "git",
                "uri": "https://github.com/NetCommons3/NetCommons3Docs.git"
            }
        },
        "redmine": false
    },
    "boilerplate_php": {
        "framework": {
            "type": "cakephp"
        },
        "cakephp": {
            "version": "2.x"
        }
    },
    "run_list": [
        "apt",
        "apt-repo",
        "boilerplate::apt_fast",
        "netcommons::git",
        "php::apt_ondrej_ppa",
        "chef-dk",
        "nodejs::nodejs_from_package",
        "phantomjs",
        "python",
        "apache2",
        "database::mysql",
        "mysql::server",
        "jenkins::master",
        "boilerplate",
        "boilerplate_php",
        "netcommons",
        "mroonga"
    ]
}
