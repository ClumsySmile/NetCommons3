{
    "ssl": {
        "verify": false
    },
    "apache": {
        "version": "2.4"
    },
    "apt": {
        "keyserver_port": 80
    },
    "mysql": {
        "bind_address":           "0.0.0.0",
        "server_root_password":   "root",
        "server_repl_password":   "repl",
        "server_debian_password": ""
    },
    "postgresql": {
        "password": {
            "postgres": "postgres"
        }
    },
    "jenkins": {
        "executors": 12,
        "executor": {
            "timeout": 240
        },
        "master": {
            "endpoint": "http://nc3dev2.netcommons.org/"
        }
    },
    "boilerplate": {
        "country": "jp",
        "git": {
            "use_git_protocol": false
        },
        "app": {
            "repo": {
                "type": "git",
                "uri": "https://github.com/NetCommons3/NetCommons3.git"
            }
        },
        "docs": {
            "repo": {
                "type": "git",
                "uri": "https://github.com/NetCommons3/NetCommons3Docs.git"
            }
        },
        "cookbook": {
            "repo": {
                "type": "git",
                "uri": "https://github.com/NetCommons3/chef_netcommons.git"
            }
        },
        "gitlab": false,
        "redmine": false,
        "jenkins": {
            "host": "nc3dev2.netcommons.org",
            "mail": {
                "recipients": "netcommons3@googlegroups.com"
            }
        }
    },
    "boilerplate_php": {
        "framework": {
            "type": "cakephp"
        },
        "cakephp": {
            "version": "2.x"
        }
    },
    "run_list": [
        "boilerplate_php::php55",
        "chef-dk",
        "virtualbox",
        "boilerplate_php::php55",
        "nodejs::nodejs_from_package",
        "phantomjs",
        "python",
        "apache2",
        "database::mysql",
        "mysql::server",
        "jenkins::master",
        "boilerplate",
        "boilerplate_php",
        "netcommons",
        "mroonga"
    ]
}
